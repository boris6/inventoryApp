@page
@model InventoryApp.Pages.Allocation.CreateModel

@{
    ViewData["Title"] = "Create Allocation";
}

<h1>Create</h1>

<h4>Allocation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Allocation.ProductID" class="control-label">Product</label>
                <select asp-for="Allocation.ProductID" asp-items="@(new SelectList(Model.Products, "ProductID", "FullName"))" class="form-control"></select>
                <span asp-validation-for="Allocation.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allocation.BinID" class="control-label">Bin</label>
                <select asp-for="Allocation.BinID" asp-items="@(new SelectList(Model.Bins, "BinID", "Name"))" class="form-control"></select>
                <span asp-validation-for="Allocation.BinID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allocation.Quantity" class="control-label"></label>
                <input asp-for="Allocation.Quantity" class="form-control" />
                <span asp-validation-for="Allocation.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allocation.CreatedDate" class="control-label"></label>
                <input asp-for="Allocation.CreatedDate" class="form-control" />
                <span asp-validation-for="Allocation.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
